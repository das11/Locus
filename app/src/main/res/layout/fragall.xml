<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_schedulefragall"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/toolbar_eventfragall"
        android:background="@color/some_accent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/month_namefragall"
                android:text="August"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/some_white"
                android:layout_alignTop="@+id/textView6fragall"
                android:layout_alignParentStart="true"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:textSize="20sp"
                android:id="@+id/textView6fragall"
                android:fontFamily="sans-serif-light"
                android:layout_alignTop="@+id/downfragall"
                android:layout_toStartOf="@+id/downfragall"
                android:textColor="@color/some_white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/downfragall"
                android:src="@drawable/down"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/view2fragall"
        android:src="@drawable/user"
        app:layout_anchor="@+id/toolbar_eventfragall"
        app:layout_anchorGravity="center|bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <com.github.sundeepk.compactcalendarview.CompactCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_viewfragall"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        app:compactCalendarTargetHeight="240dp"
        app:compactCalendarTextSize="12sp"
        app:compactCalendarBackgroundColor="@color/some_teal"
        app:compactCalendarTextColor="#fff"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
        app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        app:compactCalendarMultiEventIndicatorColor="#fff"
        android:visibility="invisible"
        android:layout_below="@+id/view2fragall"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fab_monthfragall"
        android:src="@drawable/date"
        app:backgroundTint="@color/some_accent"
        android:layout_marginEnd="21dp"
        android:layout_below="@+id/compactcalendar_viewfragall"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:visibility="invisible"/>



</RelativeLayout>